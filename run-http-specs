#!/bin/bash

PREFIX=https://api.subledger.com

http-spec -prefix $PREFIX example-file-not-found.htsf      && exit 1
http-spec -prefix $PREFIX example-line-count-mismatch.htsf && exit 1
http-spec -prefix $PREFIX example-request-only.htsf        && exit 1
http-spec -prefix $PREFIX example-uuid.htsf                && exit 1

http-spec -prefix $PREFIX example-not-found.htsf \
                          example-post.htsf      \
                          example-regexp-and-substitution.htsf || exit 1

echo Tests ran successfully!

exit 0
